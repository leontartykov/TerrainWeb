{
  "openapi": "3.0.0",
  "info": {
    "title": "Генерация трехмерного ландшафта (спецификация)",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost/api/v1"
    }
  ],
  "tags": [
    {
      "name": "users",
      "description": "information about users"
    },
    {
      "name": "projects",
      "description": "information about terrain projects"
    },
    {
      "name": "ratingJobs",
      "description": "information about terrains rating"
    },
    {
      "name": "renderJobs"
    },
    {
      "name": "accounts",
      "description": "users accounts"
    }
  ],
  "components": {
    "securitySchemes": {
      "Authorization": {
        "type": "apiKey",
        "description": "API key to authorize requests. If you don't have an OpenWeatherMap API key, please login.",
        "name": "Authorization",
        "in": "header"
      },
      "UUID": {
        "type": "apiKey",
        "description": "API key to authorize requests. If you don't have an OpenWeatherMap API key, please login.",
        "name": "UUID",
        "in": "header"
      }
    },
    "schemas": {
      "BadRequest": {
        "type": "object",
        "properties": {
          "fields_problems": {
            "type": "object"
          },
          "data": {
            "type": "object"
          },
          "status": {
            "type": "string",
            "example": "bad_request"
          },
          "message": {
            "type": "string",
            "example": "Bad request"
          }
        }
      },
      "User": {
        "type": "object",
        "description": "user with password",
        "required": [
          "login",
          "perm_level"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "description": "user id"
          },
          "login": {
            "type": "string",
            "description": "user login"
          },
          "password": {
            "type": "string",
            "description": "user password"
          },
          "perm_level": {
            "type": "integer",
            "description": "permission level"
          },
          "blocked": {
            "type": "boolean",
            "description": "is user blocked"
          },
          "deleted": {
            "type": "boolean",
            "description": "is user deleted"
          }
        }
      },
      "Terrain": {
        "type": "object",
        "description": "terrain",
        "properties": {
          "id": {
            "type": "integer",
            "description": "terrain project id"
          },
          "name": {
            "type": "string",
            "description": "terrain project name"
          },
          "last_edit": {
            "type": "string",
            "format": "date-time",
            "description": "last time project being edited"
          }
        }
      },
      "TerrainList": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Terrain"
        }
      },
      "TerrainSubmit": {
        "type": "object",
        "description": "submit terrain parametres",
        "properties": {
          "size": {
            "type": "object",
            "description": "set terrain width and length",
            "properties": {
              "width": {
                "type": "integer"
              },
              "length": {
                "type": "integer"
              }
            }
          },
          "scale": {
            "type": "integer",
            "description": "scale terrain by value"
          },
          "config": {
            "type": "object",
            "description": "set terrain config values",
            "properties": {
              "octaves": {
                "type": "integer"
              },
              "gain": {
                "type": "number",
                "format": "double"
              },
              "lacunarity": {
                "type": "number",
                "format": "double"
              },
              "seed": {
                "type": "integer"
              },
              "frequency": {
                "type": "number",
                "format": "double"
              }
            }
          },
          "rotate": {
            "type": "object",
            "description": "rotate terrain by OXYZ axes",
            "properties": {
              "angle_x": {
                "type": "integer"
              },
              "angle_y": {
                "type": "integer"
              },
              "angle_z": {
                "type": "integer"
              }
            }
          }
        }
      },
      "TerrainProjectRating": {
        "type": "object",
        "description": "rating terrain projects",
        "properties": {
          "rating": {
            "type": "number",
            "format": "double",
            "description": "scale terrain by value"
          }
        }
      },
      "Scene": {
        "type": "object",
        "description": "forming terrain scene",
        "properties": {
          "terrain": {
            "$ref": "#/components/schemas/TerrainSubmit"
          },
          "light": {
            "type": "object",
            "description": "scene light position",
            "properties": {
              "x": {
                "type": "integer"
              },
              "y": {
                "type": "integer"
              },
              "z": {
                "type": "integer"
              }
            }
          }
        }
      }
    }
  },
  "paths": {
    "/accounts/login": {
      "post": {
        "tags": [
          "accounts"
        ],
        "summary": "authorize user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "login": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": [
                  "login",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "authorization is successfull",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "access_token": {
                      "type": "string"
                    },
                    "uuid": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "authorization is forbidden"
          },
          "404": {
            "description": "user is not found"
          }
        }
      }
    },
    "/accounts/register": {
      "post": {
        "summary": "add new user (registration)",
        "tags": [
          "accounts"
        ],
        "description": "add new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "login": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "perm_level": {
                    "type": "integer"
                  }
                },
                "required": [
                  "login",
                  "password",
                  "perm_level"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "success"
          },
          "403": {
            "description": "user is not available"
          },
          "404": {
            "description": "user is not found"
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "tags": [
          "users"
        ],
        "description": "",
        "summary": "return info about one user",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "security": [
          {
            "Authorization": []
          },
          {
            "UUID": []
          }
        ],
        "responses": {
          "200": {
            "description": "success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "user is not found"
          }
        }
      },
      "patch": {
        "tags": [
          "users"
        ],
        "summary": "changes one user information",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "login": {
                    "type": "string"
                  }
                },
                "required": [
                  "login"
                ]
              }
            }
          }
        },
        "security": [
          {
            "Authorization": []
          },
          {
            "UUID": []
          }
        ],
        "responses": {
          "200": {
            "description": "success"
          },
          "404": {
            "description": "user is not found"
          }
        }
      },
      "delete": {
        "tags": [
          "users"
        ],
        "summary": "delete user by id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "example": 3
          }
        ],
        "security": [
          {
            "Authorization": []
          },
          {
            "UUID": []
          }
        ],
        "responses": {
          "200": {
            "description": "user was deleted successful"
          },
          "404": {
            "description": "user is not found"
          }
        }
      }
    },
    "/users/{id}/projects": {
      "get": {
        "tags": [
          "projects"
        ],
        "summary": "returns a list of terrain projects.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "page",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "security": [
          {
            "Authorization": []
          },
          {
            "UUID": []
          }
        ],
        "responses": {
          "200": {
            "description": "success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TerrainList"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadRequest"
                }
              }
            }
          },
          "404": {
            "description": "terrain is not found"
          }
        }
      },
      "post": {
        "summary": "add new terrain",
        "tags": [
          "projects"
        ],
        "description": "add new terrain",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "security": [
          {
            "Authorization": []
          },
          {
            "UUID": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                },
                "required": [
                  "name"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "successful created"
          },
          "400": {
            "description": "BadRequest"
          },
          "404": {
            "description": "user is not found"
          }
        }
      }
    },
    "/users/{id}/projects/{terrain_id}": {
      "get": {
        "tags": [
          "projects"
        ],
        "summary": "get config values for this terrain",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "terrain_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "security": [
          {
            "Authorization": []
          },
          {
            "UUID": []
          }
        ],
        "responses": {
          "200": {
            "description": "success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TerrainSubmit"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadRequest"
                }
              }
            }
          },
          "403": {
            "description": "user is not available"
          }
        }
      }
    },
    "/users/{id}/projects/{name_proj}": {
      "delete": {
        "tags": [
          "projects"
        ],
        "summary": "delete terrain by terrain id and user id",
        "security": [
          {
            "Authorization": []
          },
          {
            "UUID": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "name_proj",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "terrain was deleted successful"
          },
          "403": {
            "description": "forbidden"
          },
          "404": {
            "description": "not found"
          }
        }
      }
    },
    "/renderJobs/terrains/image": {
      "post": {
        "tags": [
          "renderJobs"
        ],
        "summary": "render terrain picture",
        "security": [
          {
            "Authorization": []
          },
          {
            "UUID": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Scene"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "success",
            "content": {
              "image/png": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "403": {
            "description": "authorization is denied"
          },
          "404": {
            "description": "terrain is not found"
          }
        }
      }
    },
    "/ratingJobs/terrain/{id}/rate": {
      "get": {
        "tags": [
          "ratingJobs"
        ],
        "summary": "get terrain rating",
        "security": [
          {
            "Authorization": []
          },
          {
            "UUID": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TerrainProjectRating"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "ratingJobs"
        ],
        "summary": "set terrain rating",
        "security": [
          {
            "Authorization": []
          },
          {
            "UUID": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "rating": {
                    "type": "integer",
                    "example": 5
                  }
                },
                "required": [
                  "rating"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "success"
          },
          "403": {
            "description": "authorization is denied"
          },
          "404": {
            "description": "terrain is not found"
          }
        }
      }
    }
  }
}